{% extends 'base.html.twig' %}

{% block title %}Hello SuperHeroController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="container-xxl">
    <div class="container text-center">
        <div class="row align-items-start">
            <div class="col">
                <p>
                    <img src="heros/images/{{ heros.imageName}}" alt="">
                </p>
            </div>
            <div class="col">
                <h1>Créer un héros</h1>
                {{ form_start(form) }} 

                        {{form_row(form.name)}}
                        {{form_row(form.alterEgo)}}
                        {{form_row(form.powerHero)}}
                        {{form_row(form.energyLevel)}}
                        {{form_row(form.biography)}}
                        {{form_row(form.imageName)}}
                        {{form_row(form.createdAt)}}
                        {{form_row(form.available)}}

                        {{form_row(form.button)}}
                        <a class="btn btn-primary"  href= "{{ path('show_hero') }}">Annuler</a>

                {{ form_end(form) }}
            </div>
            
        </div>
    </div>
</div>
{% endblock %}
