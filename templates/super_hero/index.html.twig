{% extends 'base.html.twig' %}

{% block title %}Hello SuperHeroController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="container-xl">
  <h1 class="display-3">Les supers héros de l'agence</h1>
</div>

<div class="container-xl">
  <div class="d-flex flex-row-reverse">
  <a class="btn btn-primary" href= "{{ path('create_hero') }}"type="button" >Ajouter un héros</a>
  </div>
</div>



{# <div class="container-xl"> #}
  {# <div class="container-flex-col"> #}

      {% for hero in heros %}
          
        <div class="container-xl">
 {# <div class="grid text-center" style="row-gap: 0;"> #}
        {# <div class="container-flex-col"> #}
                <div class="card">
                  <a href= "{{ path('edit_hero', {id: hero.id}) }}">
                  
                    <p class="time-text"><span>{{hero.name}}</span><span class="time-sub-text">{{hero.alterEgo}}</span></p>
                    <a href= "{{ path('remove_hero', {id: hero.id}) }}"><img src="x.png"></a> 
                    <p class="day-text">    

                          <div class="row align-items-start">
                            <div class="col">
                              {{hero.available}}
                            </div>
                          <div class="col ">
                            {{hero.biography}}
                          </div>

                        <div class="container-md">
                        {% if hero.powerHero == null %}
                          <td> Power: Non assigné </td>
                        {% else %}
                          <td> {{hero.powerHero.name}} </td>
                        {% endif %}
                        </div>
                        <div class="container-md">
                        Energie: {{hero.energyLevel}}
                        </div>
                        <div class="container-md">
                        {{hero.createdAt| date}}
                        </div>
                        </p>
                  </div>
                    
                  </a>
                </div>
          </div>
              {% endfor %}
    {# </div> #}
  </div>
</div>

