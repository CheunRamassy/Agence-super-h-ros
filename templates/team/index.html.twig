{% extends 'base.html.twig' %}

{% block title %}Team{% endblock %}

{% block body %}

<div class="container-xl">
  <h1 class="display-3">Team</h1>
</div>

<div class="container-xl">
  <div class="d-flex flex-row-reverse">
  <a class="btn btn-primary" href= "{{ path('create_team') }}"type="button" >Ajouter une team</a>
  </div>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered">
    <thead class="thead-dark">
      <tr>
          <th scope="col">Nom</th>
          <th scope="col">Leader</th>
          <th scope="col">Membre</th>
          <th scope="col">Mission en cours</th>
          <th scope="col">Date de cr√©ation</th>
          <th scope="col">Action</th>
      </tr>
  </thead>
  <tbody>
    <tr>
      {% for team in teams %}
          <td>{{team.name}}</td>
          <td>{{team.leader.name}}</td>
          <td>
          {% for member in team.members %}
            {{member.name}}
          {% endfor %}
          </td>
          <td>{{team.currentMission.title}}</td>
          <td>{{team.createdAt |date}}</td>
          <td>
            <a class="btn btn-primary" href= "{{ path('edit_team', {id: team.id}) }}"type="button" >Modifier</a>
            <a class="btn btn-danger" href= "{{ path('create_team', {id: team.id}) }}"type="button" >Supprimer</a>
          </td>
        </tr>
      {% endfor %}
    </tbody>
  </table>
</div>

   

{% endblock %}
