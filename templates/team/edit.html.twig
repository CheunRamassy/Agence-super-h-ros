{% extends 'base.html.twig' %}

{% block title %}{{team.name}}{% endblock %}

{% block body %}
<div class="container-xxl">
    <div class="container text-center">
        <div class="row align-items-start">
                <h1>{{team.name}}</h1>

                {{ form_start(form) }} 

                        {{form_row(form.name)}}
                        {{form_row(form.leader)}}
                        {{form_row(form.members)}}
                        {{form_row(form.currentMission)}}
                        {{form_row(form.createdAt)}}
                        {{form_row(form.active)}}

                        {{form_row(form.button)}}
                        <a class="btn btn-primary"  href= "{{ path('show_hero') }}">Annuler</a>

                {{ form_end(form) }}
            </div>
            
        </div>
    </div>
</div>

{% endblock %}