{% extends 'base.html.twig' %}

{% block title %}Création de team{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="container-xxl">
    <div class="container text-center">
        <div class="row align-items-start">
            <div class="col">
                <h1>Créer un héros</h1>
                {{ form_start(form) }} 

                        {{form_row(form.name)}}
                        {{form_row(form.leader)}}
                        {{form_row(form.members)}}
                        {{form_row(form.currentMission)}}
                        {{form_row(form.createdAt)}}
                        {{form_row(form.active)}}

                        {{form_row(form.button)}}
                        <a class="btn btn-primary"  href= "{{ path('show_team') }}">Annuler</a>

                {{ form_end(form) }}
            </div>
            
        </div>
    </div>
</div>
{% endblock %}
